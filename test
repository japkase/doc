
set JIRA_BASE_URL=https://jira.example.com
set PROJECT_KEY=TM
set PAT=<JIRA_SERVER_PAT>
set JUNIT_FILE=C:\path\to\junit.xml
set ALLURE_ZIP=C:\path\to\allure-report.zip



echo {"fields":{"summary":"Test Execution - local test","description":"Allure Report: https://example.local/allure/"}} > info.json




curl.exe -sS -H "Authorization: Bearer %PAT%" -F "file=@%JUNIT_FILE%" -F "info=@info.json;type=application/json" "%JIRA_BASE_URL%/rest/raven/1.0/import/execution/junit/multipart?projectKey=%PROJECT_KEY%" -o xray.json
type xray.json



set TE_KEY=TM-12345
curl.exe -sS -H "X-Atlassian-Token: no-check" -H "Authorization: Bearer %PAT%" -F "file=@%ALLURE_ZIP%" "%JIRA_BASE_URL%/rest/api/2/issue/%TE_KEY%/attachments"
